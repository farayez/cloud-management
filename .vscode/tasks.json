{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Initialize Resource",
      "type": "shell",
      "command": "npm",
      "args": ["run", "resource:init"],
      "presentation": {
        "showReuseMessage": false
      }
    },
    {
      "label": "Push Image",
      "type": "shell",
      "command": "npm",
      "args": ["run", "image:push", "${input:image}"],
      "presentation": {
        "showReuseMessage": false
      }
    },
    {
      "label": "Start Service",
      "type": "shell",
      "command": "npm",
      "args": ["run", "ecs:start_service", "${input:service}"],
      "presentation": {
        "showReuseMessage": false
      }
    },
    {
      "label": "Stop Service",
      "type": "shell",
      "command": "npm",
      "args": ["run", "ecs:stop_service", "${input:service}"],
      "presentation": {
        "showReuseMessage": false
      }
    },
    {
      "label": "Redeploy Service",
      "type": "shell",
      "command": "npm",
      "args": ["run", "ecs:redeploy_service", "${input:service}"],
      "presentation": {
        "showReuseMessage": false
      }
    },
    {
      "label": "Exec into Container",
      "type": "shell",
      "command": "npm",
      "args": ["run", "ecs:exec_container", "${input:service}"],
      "presentation": {
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "Update Service",
      "type": "shell",
      "command": "./update-service.sh",
      "args": [
        "${input:service}",
        "task_definition_revision=${input:taskDefinitionRevision}"
      ],
      "presentation": {
        "showReuseMessage": false
      }
    },
    {
      "label": "Pull Parameter",
      "type": "shell",
      "command": "npm",
      "args": ["run", "ssm_parameter:pull", "${input:ssm-parameter}"],
      "presentation": {
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false,
        "echo": false,
        "group": "SSM Parameter"
      }
    },
    {
      "label": "Push Parameter",
      "type": "shell",
      "command": "npm",
      "args": ["run", "ssm_parameter:push", "${input:ssm-parameter}"],
      "presentation": {
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false,
        "echo": false,
        "group": "SSM Parameter"
      }
    },
    {
      "label": "Test Integration",
      "type": "shell",
      "command": "./test.sh",
      "args": ["${input:service}", "${input:testCommand}"],
      "presentation": {
        "showReuseMessage": false
      }
    },
    {
      "label": "View Variables",
      "type": "shell",
      "command": "./view-variables.sh",
      "args": ["${input:service}"],
      "presentation": {
        "showReuseMessage": false
      }
    }
  ],
  "inputs": [
    {
      "id": "service",
      "type": "command",
      "command": "extension.commandvariable.file.pickFile",
      "args": {
        "description": "Which Service?",
        "include": "services/*.config.sh",
        "valueTransform": {
          "text": "${fileBasename}",
          "find": ".config.sh",
          "replace": ""
        },
        "labelTransform": {
          "text": "${fileBasename}",
          "find": ".config.sh",
          "replace": ""
        },
        "display": "transform",
        "showDirs": false,
        "keyRemember": "selectedService"
      }
    },
    {
      "id": "image",
      "type": "command",
      "command": "extension.commandvariable.file.pickFile",
      "args": {
        "description": "Which Image?",
        "include": "images/*.config.sh",
        "valueTransform": {
          "text": "${fileBasename}",
          "find": ".config.sh",
          "replace": ""
        },
        "labelTransform": {
          "text": "${fileBasename}",
          "find": ".config.sh",
          "replace": ""
        },
        "display": "transform",
        "showDirs": false,
        "keyRemember": "selectedImage"
      }
    },
    {
      "id": "ssm-parameter",
      "type": "command",
      "command": "extension.commandvariable.file.pickFile",
      "args": {
        "description": "Which Parametr?",
        "include": "ssm_parameters/*.config.sh",
        "valueTransform": {
          "text": "${fileBasename}",
          "find": ".config.sh",
          "replace": ""
        },
        "labelTransform": {
          "text": "${fileBasename}",
          "find": ".config.sh",
          "replace": ""
        },
        "display": "transform",
        "showDirs": false,
        "keyRemember": "selectedParameter"
      }
    },
    {
      "id": "testCommand",
      "type": "promptString",
      "default": "aws sts get-caller-identity",
      "description": "Command to execute"
    },
    {
      "id": "desiredCount",
      "type": "promptString",
      "default": "1",
      "description": "Desired task count in service"
    },
    {
      "id": "taskDefinitionRevision",
      "type": "promptString",
      "default": "",
      "description": "Task definition revision"
    }
  ]
}
